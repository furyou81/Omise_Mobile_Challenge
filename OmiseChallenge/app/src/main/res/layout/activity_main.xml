<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/challenge_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/omiseBlue"
        android:textSize="18dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="@string/omise_challenge"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/omise_logo"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:padding="30dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:src="@drawable/omise_logo"
            />

        <Button
            android:id="@+id/charity_list_screen_button"
            android:layout_below="@id/omise_logo"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:text="@string/go_to_charity_list"
            android:background="@color/colorPrimary"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:onClick="go_to_charity_list_screen"/>
    </RelativeLayout>



</RelativeLayout>